<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SearchActivity" >

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/listviewbackground">
        <ImageView 
            android:id="@+id/searchtitleimage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/search"
            android:contentDescription="@string/app_name"/>
        <TextView 
            android:layout_toRightOf="@id/searchtitleimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="@string/searchtips"/>
        <Button 
            android:id="@+id/searchbutton"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginRight="8dp"
            android:textSize="15sp"
            android:text="@string/searchmenu"
            android:visibility="invisible"
            android:onClick="searchOnClick"/>
    </RelativeLayout>
    <ListView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/listitem"
        android:id="@+id/searchlistview"/>
</LinearLayout>